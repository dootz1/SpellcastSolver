<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="542.0" prefWidth="476.0" spacing="4.0" stylesheets="@../css/table.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dootz.spellcastsolver.controller.TableController">
   <children>
      <BorderPane prefHeight="25.0" prefWidth="476.0">
         <left>
            <Label styleClass="primary-text" text="Results" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Label fx:id="resultsSummary" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="306.0" styleClass="primary-text" text="12,345 Results (0.45 seconds)" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
      <BorderPane prefHeight="35.0" prefWidth="476.0" styleClass="table-search-container">
         <left>
            <TextField fx:id="wordQuery" prefHeight="28.0" prefWidth="360.0" promptText="Search" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button mnemonicParsing="false" onAction="#handleClearSelection" styleClass="clear-selection-button" text="Clear Selection" BorderPane.alignment="CENTER" />
         </right>
         <padding>
            <Insets right="4.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </BorderPane>
      <TableView fx:id="resultsTable" prefHeight="487.0" prefWidth="476.0" styleClass="results-table">
         <columns>
            <TableColumn fx:id="wordsColumn" editable="false" prefWidth="210.0" text="Word" />
            <TableColumn fx:id="pointsColumn" editable="false" prefWidth="87.0" text="Points" />
            <TableColumn fx:id="gemsColumn" editable="false" prefWidth="87.0" text="Gems" />
            <TableColumn fx:id="swapsColumn" editable="false" prefWidth="87.0" text="Swaps" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
